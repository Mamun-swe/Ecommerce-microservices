    "@types/helmet": "^4.0.0",
    "@types/jest": "^28.1.8",
    "@types/mongoose": "^5.11.97",
    "@types/morgan": "^1.9.3",
    "concurrently": "^7.3.0",
    "jest": "^28.1.3",
    "nocache": "^3.0.4",
    "nodemon": "^2.0.19",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
