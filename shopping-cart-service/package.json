  "version": "1.0.0",
  "description": "A shopping cart backend microservice for e-commerce application.",
  "main": "server.ts",
  "scripts": {
    "clean": "rimraf build/*",
    "build": "npm run clean && npx tsc",
    "start": "node build/server.js",
    "postinstall": "tsc",
    "watch-node": "nodemon build/server.js",
    "watch-ts": "tsc -w",
    "dev": "concurrently \"npx tsc --watch\" \"nodemon -q build/server.js\"",
    "test": "jest --runInBand --force-exit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Mamun-swe/Ecommerce-shopping-cart-microservice.git"
  },
  "keywords": [
    "ShoppingCartMicroservice",
    "cart",
    "service",
    "RESTAPI",
    "MongoDB",
    "Nodejs",
    "Expressjs",
    "Typescript"
  ],
  "author": "Abdullah Al Mamun",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Mamun-swe/Ecommerce-shopping-cart-microservice/issues"
  },
  "homepage": "https://github.com/Mamun-swe/Ecommerce-shopping-cart-microservice#readme",
  "dependencies": {
    "body-parser": "^1.20.0",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "helmet": "^5.1.1",
    "mongoose": "^6.5.3",
    "morgan": "^1.10.0"
  },
  "engines": {
    "node": "16.x"
  },
